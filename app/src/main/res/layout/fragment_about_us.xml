<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="#ffffff"
        android:clickable="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dev"
                android:text="App Developed By"
                android:textSize="25sp"
                android:textColor="#000055"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"/>
        <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#000000"
                android:id="@+id/bar"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/dev"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/tony_stark_small"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:cropToPadding="true"
                android:layout_below="@+id/bar"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/app_name"
                android:id="@+id/ivProfile"

        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debdut Goswami"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:id="@+id/tvName"
                android:layout_below="@+id/ivProfile"
                android:layout_marginLeft="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Academy Of Technology"
                android:layout_below="@id/tvName"
                android:id="@+id/clg"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="debdutgoswami@gmail.com"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:id="@+id/tvEmail"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/clg"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version: 1.0"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginTop="190dp"
                android:id="@+id/tvVersion"
                android:layout_below="@+id/tvEmail"
                android:layout_marginLeft="8dp"/>
    </RelativeLayout>
</LinearLayout>